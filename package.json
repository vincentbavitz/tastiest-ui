{
  "name": "@tastiest-io/tastiest-ui",
  "author": "vincentbavitz",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": "git://github.com:tastiest-io/tastiest-ui",
  "version": "0.8.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "TAILWIND_MODE=build NODE_ENV=production tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "install-peers && tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "peerDependencies": {
    "@ant-design/icons": "^4.7.0",
    "clsx": "^1.1.1",
    "react": ">=16",
    "react-use": "^17.3.1",
    "styled-components": "^5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/tastiest-ui.esm.js",
  "size-limit": [
    {
      "path": "dist/tastiest-ui.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/tastiest-ui.esm.js",
      "limit": "10 KB"
    }
  ],
  "dependencies": {
    "@headlessui/react": "^1.4.1",
    "@nivo/core": "^0.74.0",
    "@nivo/line": "^0.74.0",
    "@tastiest-io/tastiest-icons": "^0.28.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@size-limit/preset-small-lib": "^6.0.3",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.3.12",
    "@storybook/addons": "^6.3.12",
    "@storybook/react": "^6.3.12",
    "@tailwindcss/postcss7-compat": "^2.2.17",
    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.10",
    "@types/styled-components": "^5.1.15",
    "autoprefixer": "^9",
    "babel-loader": "^8.2.3",
    "husky": "^7.0.4",
    "install-peers-cli": "^2.2.0",
    "postcss": "^8.3.11",
    "react": ">=16",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "rollup-plugin-postcss": "^4.0.1",
    "size-limit": "^6.0.3",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    }
  }
}
